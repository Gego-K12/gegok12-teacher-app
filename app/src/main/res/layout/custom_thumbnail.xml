<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="10dp"


    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/participant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLength="15"
        android:textColor="#C2185B"
        android:textStyle="bold"
        android:text="Aswin Kumar">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/black">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            >
            <com.twilio.video.VideoTextureView
                android:id="@+id/thumbnail_video_view"
                app:tviScaleType="balanced"
                app:tviOverlaySurface="true"
                app:tviMirror="true"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="175dp"
                android:layout_height="175dp"
                >

            </com.twilio.video.VideoTextureView>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:indeterminateTint="@color/white"
                app:layout_constraintTop_toTopOf="@id/thumbnail_video_view"
                app:layout_constraintBottom_toBottomOf="@id/thumbnail_video_view"
                app:layout_constraintStart_toStartOf="@+id/thumbnail_video_view"
                app:layout_constraintEnd_toEndOf="@+id/thumbnail_video_view">

            </ProgressBar>
            <ImageView
                android:id="@+id/video_disabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_videocam_off_black_24dp"
                app:tint="@color/white"

                app:layout_constraintTop_toBottomOf="@id/progressBar"
                app:layout_constraintBottom_toBottomOf="@id/thumbnail_video_view"
                app:layout_constraintStart_toStartOf="@+id/thumbnail_video_view"
                app:layout_constraintEnd_toEndOf="@+id/thumbnail_video_view">

            </ImageView>

            <ImageView
                android:id="@+id/mute_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"

                android:src="@drawable/ic_mic_white_24dp"
                app:layout_constraintBottom_toBottomOf="@id/thumbnail_video_view"
                app:layout_constraintEnd_toEndOf="@+id/thumbnail_video_view"
                app:tint="@color/white">
            </ImageView>

            <TextView
                android:id="@+id/text_onanothercall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="on Another Call"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/progressBar"
                app:layout_constraintBottom_toBottomOf="@id/thumbnail_video_view"
                app:layout_constraintStart_toStartOf="@+id/thumbnail_video_view"
                app:layout_constraintEnd_toEndOf="@+id/thumbnail_video_view">
            </TextView>

            <TextView
                android:id="@+id/text_strength"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="visible"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/thumbnail_video_view"
                app:layout_constraintStart_toStartOf="@+id/thumbnail_video_view">

            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>