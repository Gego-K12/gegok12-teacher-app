<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/attendancefnstudentname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heath Glover"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID :"
                    android:fontFamily="@font/poppins_regular"
                    ></TextView>
                <TextView
                    android:id="@+id/attendancefnstudentid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12151"
                    android:fontFamily="@font/poppins_regular"
                    ></TextView>

            </LinearLayout>
            <Spinner
                android:id="@+id/attendancefnspinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/squareborder"
                android:layout_margin="10dp"
                android:padding="5dp"
                ></Spinner>
            <EditText
                android:id="@+id/attendancefnremarks"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Remarks"
                android:padding="5dp"
                android:background="@drawable/squareborder"
                android:layout_margin="10dp"
                ></EditText>
            <Button
                android:id="@+id/attendancefnsubmit"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/cuctomized_button"
                android:layout_margin="10dp"
                android:text="@string/submit"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                ></Button>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>