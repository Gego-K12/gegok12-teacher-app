<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/toolbar">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:id="@+id/studentleavebackbtn"
            android:src="@drawable/ic_new_back_button"
            ></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Students Leave"
            android:textSize="17sp"
            android:layout_marginStart="30dp"
            android:textColor="@color/whitecolor"
            android:fontFamily="@font/suezone_regular">
        </TextView>
    </androidx.appcompat.widget.Toolbar>



    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentleavetablayout"
        android:background="@drawable/toolbar"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#00ccff"
        app:tabTextColor="@color/white"
       />

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentleaveviewpager"
        />
</LinearLayout>
