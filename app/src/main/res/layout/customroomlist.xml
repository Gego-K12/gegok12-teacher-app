<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="#F9FBFF"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/roomname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Room name"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <ImageView
            android:id="@+id/btn_edit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_newly_edit"
            app:layout_constraintBottom_toBottomOf="@+id/status"
            app:layout_constraintEnd_toStartOf="@id/btn_delete"
            app:layout_constraintTop_toTopOf="@+id/status"></ImageView>

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_newly_delete"
            app:layout_constraintBottom_toBottomOf="@+id/btn_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_edit"></ImageView>


        <Button
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/scheduled"
            android:fontFamily="@font/poppins_regular"
            android:text="scheduled"
            android:textColor="@color/white"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="@+id/roomname"
            app:layout_constraintEnd_toStartOf="@id/btn_edit"
            app:layout_constraintTop_toTopOf="parent">
        </Button>


        <TextView
            android:id="@+id/roomdescription"
            app:layout_constraintTop_toBottomOf="@id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Infosys interview questions and interview experiences of various students who have cracked Infosys."
            android:layout_marginTop="4dp">
        </TextView>


        <TextView
            android:id="@+id/subject_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Subject : "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/roomdescription"></TextView>

        <TextView
            android:id="@+id/subject_new_api"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="English"
            android:textColor="@color/black"
            app:layout_constraintBaseline_toBaselineOf="@+id/subject_new"
            app:layout_constraintStart_toEndOf="@id/subject_new"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Class: "
            android:id="@+id/class_dumytv"
            app:layout_constraintEnd_toStartOf="@id/class_id_room"
            app:layout_constraintTop_toBottomOf="@id/roomdescription"></TextView>


        <TextView
            android:id="@+id/class_id_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_regular"
            android:text=" 6 - B"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/roomdescription"></TextView>


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_new_calender"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subject_new" />


        <TextView
            android:id="@+id/timing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"

            android:fontFamily="@font/poppins_regular"
            android:text=" 12.00 AM - 01.30 PM"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView5"></TextView>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="12.02.0220"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/class_dumytv"></TextView>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avathar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/profile_demopic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timing"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/txt_created_by"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/poppins_regular"
            android:text="created by admin "
            app:layout_constraintBottom_toBottomOf="@+id/avathar"
            app:layout_constraintEnd_toStartOf="@+id/manage_invites"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/avathar"
            app:layout_constraintTop_toTopOf="@+id/avathar"></TextView>

        <Button
            android:id="@+id/manage_invites"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"
            android:background="@drawable/invites_background"
            android:fontFamily="@font/poppins_regular"
            android:text="Members"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/joinroombtn"
            app:layout_constraintStart_toEndOf="@id/txt_created_by"
            app:layout_constraintTop_toBottomOf="@id/date">
        </Button>

        <Button
            android:id="@+id/joinroombtn"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/joinbuttonbg"
            android:fontFamily="@font/poppins_regular"
            android:text="Join"
            android:textColor="@color/white"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date">

        </Button>

        <Button
            android:id="@+id/recordcheckbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/manage_invites"
            android:text="Record" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
