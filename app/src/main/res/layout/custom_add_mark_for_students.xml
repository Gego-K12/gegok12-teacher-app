<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/student_dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile_demopic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="surya prakash"
                android:fontFamily="@font/poppins_bold"
                app:layout_constraintStart_toEndOf="@id/student_dp"
                app:layout_constraintTop_toTopOf="parent"></TextView>


            <TextView
                android:id="@+id/student_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="142525"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintStart_toEndOf="@id/student_dp"
                app:layout_constraintTop_toBottomOf="@id/student_name"></TextView>


            <Button
                android:id="@+id/present_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/roundbutton_green"
                android:text="P"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"></Button>


            <Button
                android:id="@+id/absent_id"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/roundbutton_red"
                android:text="AB"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"></Button>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="marks: "
                android:id="@+id/marktv_dummy"
                android:layout_marginEnd="4dp"
                app:layout_constraintTop_toTopOf="@id/marks_upload"
                app:layout_constraintBottom_toBottomOf="@id/marks_upload"
                app:layout_constraintEnd_toStartOf="@id/marks_upload"
                android:fontFamily="@font/poppins_regular"></TextView>


            <EditText
                android:id="@+id/marks_upload"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/rectangle_shape_for_ed"
                android:fontFamily="@font/poppins_regular"
                android:inputType="number"
                android:padding="4dp"
                android:textColor="#C70039 "
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/student_id"></EditText>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/submit_bt"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@id/marks_upload"
                app:layout_constraintTop_toBottomOf="@id/student_id"
                android:text="@string/submit"></Button>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marks added...!!!"
                app:layout_constraintStart_toEndOf="@id/submit_bt"
                android:textColor="@color/basil"
                android:visibility="gone"
                android:id="@+id/success_textview"
                android:layout_margin="15dp"
                app:layout_constraintTop_toBottomOf="@id/student_id"
                android:layout_marginTop="15dp"></TextView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>