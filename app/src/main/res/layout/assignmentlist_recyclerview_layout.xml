<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/set"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/assignmentlistclass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"
                android:text="XI - B"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>


            <ImageView
                android:id="@+id/assignmentlisteditbtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_newly_edit"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/assignmentlistclass"
                app:layout_constraintEnd_toStartOf="@+id/assignmentlistdeletebtn"
                app:layout_constraintTop_toTopOf="@+id/assignmentlistclass"></ImageView>

            <ImageView
                android:id="@+id/assignmentlistdeletebtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_newly_delete"
                app:layout_constraintBottom_toBottomOf="@+id/assignmentlisteditbtn"
                app:layout_constraintEnd_toStartOf="@+id/assignmentlistviewbtn"
                app:layout_constraintTop_toTopOf="@+id/assignmentlisteditbtn"></ImageView>

            <ImageView
                android:id="@+id/assignmentlistviewbtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_new_view"
                app:layout_constraintBottom_toBottomOf="@+id/assignmentlistdeletebtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/assignmentlistdeletebtn"></ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#F9FBFF"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignment Test"
                android:layout_marginStart="8dp"
                android:id="@+id/assignmentlisttitle"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                ></TextView>

            <ImageView
                android:id="@+id/attachment_by_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_toLeftOf="@id/assignmentstatus"
                android:src="@drawable/ic_newly_attach"></ImageView>



            <ImageView
                android:id="@+id/assignmentstatus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                ></ImageView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/assigneddateset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/assignmentstatus"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_clock_green_circular_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></ImageView>

                <TextView
                    android:id="@+id/assignmentlistassigneddate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text=" 30-06-20"
                    android:textColor="@color/black"
                   android:fontFamily="@font/poppins_regular"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="@+id/imageView"></TextView>


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_new_clock_circular"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageView"
                    app:tint="@color/red">

                </ImageView>

                <TextView
                    android:id="@+id/assignmentlistsubmissiondate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text=" 31-06-20"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="@+id/imageView2"></TextView>


                <TextView
                    android:id="@+id/assignmentlistmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:background="@color/yellow"
                    android:fontFamily="@font/poppins_regular"
                    android:text="10"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/assignmentlistsubmissiondate"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/assignmentlistassigneddate">
                </TextView>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:padding="3dp"
                    android:src="@drawable/new_pencil_subject"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageView2"
                    >
                </ImageView>

                <TextView
                    android:id="@+id/assignmentlistsubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="subject"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    app:layout_constraintTop_toTopOf="@+id/imageView3"></TextView>




            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:id="@+id/descriptionset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/assigneddateset"
                android:orientation="horizontal"
                android:padding="8dp">


                <TextView
                    android:id="@+id/assignmentlistdescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="This is description">
                    </TextView>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/commentsection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/descriptionset"
                android:orientation="horizontal"
                android:padding="8dp">


                <TextView
                    android:id="@+id/commentsbyprincipal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:text="comments by principal">
                </TextView>

            </LinearLayout>




        </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>