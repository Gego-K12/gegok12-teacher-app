<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/holidaylisttoolbar"
        android:background="@drawable/toolbar"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/holidaylistbackbtn"
            android:src="@drawable/ic_new_back_button"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Holiday List"
            android:textColor="@color/whitecolor"
            android:textSize="17sp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/suezone_regular"
            ></TextView>
    </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/holidaylistrecyclerview"
        ></androidx.recyclerview.widget.RecyclerView>
</LinearLayout>