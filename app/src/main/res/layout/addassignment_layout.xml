<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/new_toolbar_gradient_color"
            android:theme="@style/ToolbarTheme">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"></LinearLayout>

                <ImageView
                    android:id="@+id/addassignmentback"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingLeft="5dp"
                    android:src="@drawable/ic_new_back_button"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/toolbar_name"
                    android:text="Add Assignment"
                    android:fontFamily="@font/suezone_regular"
                    android:textColor="@color/white"
                    android:textSize="17sp"></TextView>

            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:padding="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Class"
                android:id="@+id/selectclass"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"></TextView>


                <Spinner
                    android:id="@+id/selectclassspinner"
                    android:layout_width="120dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/selectclass"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    android:spinnerMode="dialog"></Spinner>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Select Subject"
                android:id="@+id/select_subject_tv"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintStart_toEndOf="@id/selectclassspinner"
                app:layout_constraintTop_toTopOf="parent"
               ></TextView>


                <Spinner
                    android:id="@+id/selectsubjectpinner"
                    android:layout_width="180dp"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    app:layout_constraintTop_toBottomOf="@+id/select_subject_tv"
                    app:layout_constraintStart_toEndOf="@id/selectclassspinner"
                    android:spinnerMode="dialog"></Spinner>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"></TextView>

                <EditText
                    android:id="@+id/entertitleedt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/squareborder"
                    android:hint="Enter title"
                    android:padding="5dp"></EditText>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Description"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"></TextView>


            <EditText
                android:id="@+id/enterdescriptionedt"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top"
                android:layout_marginBottom="10dp"
                android:background="@drawable/squareborder"
                android:hint="Enter Description"
                android:padding="5dp"></EditText>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assigned Date"
                    android:id="@+id/assigneddte"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular">
                </TextView>


                <TextView
                    android:id="@+id/subdatetv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Submission Date"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toEndOf="@id/idgiven"
                    app:layout_constraintTop_toTopOf="parent">

                </TextView>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:id="@+id/idgiven"
                    app:layout_constraintTop_toBottomOf="@id/assigneddte"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/squareborder"
                    app:layout_constraintStart_toStartOf="parent"
                    android:orientation="horizontal"
                    android:padding="8dp">


                    <TextView
                        android:id="@+id/assigneddatetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Select the date"
                        ></TextView>

                    <ImageView
                        android:id="@+id/assigneddatecalendar"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:visibility="visible"
                        android:src="@drawable/calendar1"></ImageView>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@drawable/squareborder"
                    android:orientation="horizontal"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@id/idgiven"
                    app:layout_constraintTop_toBottomOf="@+id/subdatetv"
                    android:padding="8dp">



                    <TextView
                        android:id="@+id/submissiondatetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Select the date"
                       ></TextView>

                    <ImageView
                        android:id="@+id/submissiondatecalendar"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/calendar1"></ImageView>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attach your file "
                    android:id="@+id/uploadmarks_tv"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    ></TextView>


                <LinearLayout
                    android:id="@+id/Choosefilebtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/uploadmarks_tv">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_new_attach_black_interface"></ImageView>

                    <TextView
                        android:id="@+id/choosefiletext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:paddingLeft="8dp"
                        android:text="Choosefile"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_regular"
                        ></TextView>

                    <TextView
                        android:id="@+id/filename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="filename"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/reddishpink"
                        android:visibility="gone"></TextView>
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">


                <TextView
                    android:id="@+id/mark_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mark"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="( Max Mark 100)"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/reddishpink"
                    app:layout_constraintStart_toEndOf="@id/mark_tv"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <EditText
                    android:id="@+id/entermarkedt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/squareborder"
                    android:hint="Enter Mark"
                    android:inputType="number"
                    android:maxLength="3"
                    android:padding="5dp"
                    app:layout_constraintTop_toBottomOf="@id/mark_tv"></EditText>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/cuctomized_button">

                <TextView
                    android:id="@+id/addassignmentsubmitbtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Submit"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/white"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>