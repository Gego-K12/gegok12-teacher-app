<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/bgcolorforcardview"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:padding="4dp">

            <TextView
                android:id="@+id/studentleavereason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="HEALTH ISSUE"
                android:textColor="@color/black"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <ImageView
                android:id="@+id/status_approved"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_new_checked"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/studentleavereason"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/studentleavereason"></ImageView>


            <ImageView
                android:id="@+id/status_rejected"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_new_cancel"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/studentleavereason"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/studentleavereason"></ImageView>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:visibility="gone"></View>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/leavetypeset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Name"
                android:textColor="@color/grey"
                android:textSize="20sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <TextView
                android:id="@+id/student_name_for_leave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="student name"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"

            android:visibility="gone"></View>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fromdateset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/leavetypeset"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From Date"
                android:textColor="@color/grey"
                android:textSize="20sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"></TextView>

            <ImageView
                android:id="@+id/dot"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_new_clock_circular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

            <TextView
                android:id="@+id/studentleavefromdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/poppins_regular"
                android:text="dd mmm yyyy"
                app:layout_constraintBottom_toBottomOf="@id/dot"
                app:layout_constraintStart_toEndOf="@id/dot"
                app:layout_constraintTop_toTopOf="@id/dot"

                ></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"

            android:visibility="gone"></View>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/todateset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/leavetypeset"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"

            >

            <ImageView
                android:id="@+id/dot1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_new_clock_circular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To Date"
                android:textColor="@color/grey"
                android:textSize="20sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <TextView
                android:id="@+id/studentleavetodate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/poppins_regular"
                android:text="dd mmm yyyy"
                app:layout_constraintBottom_toBottomOf="@id/dot1"
                app:layout_constraintStart_toEndOf="@id/dot1"
                app:layout_constraintTop_toTopOf="@id/dot1"></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"

            android:visibility="gone"></View>

        <RelativeLayout
            android:id="@+id/statusset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/todateset"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:visibility="gone"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="@color/grey"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/myleavestatuscolour"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@+id/studentleavestatus"
                android:background="@drawable/coloured_dot"
                android:gravity="center"></TextView>

            <TextView
                android:id="@+id/studentleavestatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="4dp"
                android:text="Approved"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"

            android:visibility="gone"></View>

        <LinearLayout
            android:id="@+id/remarksset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/statusset"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Comments :"
                android:textColor="@color/black"

                ></TextView>

            <TextView
                android:id="@+id/studentleavecomments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Enter the Comments"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"

            >

            <TextView
                android:id="@+id/approveleavebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APPROVE"
                android:textColor="#48BB78"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone"></TextView>

            <TextView
                android:id="@+id/rejectleavebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="REJECT"
                android:textColor="@color/reddishpink"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone"></TextView>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>